<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.biblioteca.controlador.Administrador.MainControlador"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Sistema de Biblioteca" textFill="WHITE" alignment="CENTER">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label text="Gestión Integral de Recursos Bibliotecarios" textFill="#ecf0f1" alignment="CENTER">
                <font>
                    <Font size="14.0" />
                </font>
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Button text="👥 Gestión de Usuarios"
                    onAction="#abrirUsuarios"
                    prefWidth="280.0"
                    prefHeight="50.0"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <Button text="📚 Gestión de Libros"
                    onAction="#abrirLibros"
                    prefWidth="280.0"
                    prefHeight="50.0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <Button text="📋 Gestión de Préstamos"
                    onAction="#abrirPrestamos"
                    prefWidth="280.0"
                    prefHeight="50.0"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Button text="❌ Salir"
                    onAction="#salirAplicacion"
                    prefWidth="120.0"
                    prefHeight="35.0"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>

