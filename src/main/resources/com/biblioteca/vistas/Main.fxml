<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.biblioteca.controlador.MainControlador">

    <top>
        <Label text="Sistema de Biblioteca" style="-fx-font-size: 24px; -fx-padding: 20;" alignment="CENTER"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 40;">
            <Button text="Gestión de Usuarios" prefWidth="200" onAction="#abrirUsuarios"/>
            <Button text="Gestión de Libros" prefWidth="200" onAction="#abrirLibros"/>
            <Button text="Gestión de Préstamos" prefWidth="200" onAction="#abrirPrestamos"/>
        </VBox>
    </center>
</BorderPane>
