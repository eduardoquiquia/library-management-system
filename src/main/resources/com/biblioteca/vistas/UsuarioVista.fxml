<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.biblioteca.controlador.UsuarioControlador">

    <top>
        <Label text="Gestión de Usuarios" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <TextField fx:id="nombreField" promptText="Nombre"/>
            <TextField fx:id="apellidoField" promptText="Apellido"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="telefonoField" promptText="Teléfono"/>
            <HBox spacing="10">
                <Button text="Agregar" onAction="#agregarUsuario"/>
                <Button text="Actualizar" onAction="#actualizarUsuario"/>
                <Button text="Eliminar" onAction="#eliminarUsuario"/>
                <Button text="Limpiar" onAction="#limpiarCampos"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <TableView fx:id="tablaUsuarios" prefHeight="200">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colNombre" text="Nombre"/>
                <TableColumn fx:id="colApellido" text="Apellido"/>
                <TableColumn fx:id="colEmail" text="Email"/>
                <TableColumn fx:id="colTelefono" text="Teléfono"/>
            </columns>
        </TableView>
    </bottom>

    <HBox spacing="10">
        <Button text="Ver todos los usuarios" onAction="#verReporteUsuarios"/>
        <Button text="Ver usuario seleccionado" onAction="#verReporteUsuarioPorId"/>
    </HBox>
</BorderPane>
